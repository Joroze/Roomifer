<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/taskContentTitle"
            android:inputType="none"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Task Name" />



        <me.grantland.widget.AutofitTextView
            android:id="@+id/taskContentDescriptionTextLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:layout_below="@id/taskContentTitle"
            android:layout_margin="16dp"
            android:layout_centerHorizontal="true"
            android:text="Task Description"
            android:maxLines="3" />


        <Button
            android:id="@+id/buttonDismissTaskContent"
            android:text="Dismiss"
            android:layout_below="@id/taskContentDescriptionTextLabel"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</LinearLayout>
